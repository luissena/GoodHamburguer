@page "/orders"

<PageTitle>GoodHamburguer - Orders</PageTitle>

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2>My Orders</h2>
        </div>
    </div>

    <ErrorMessage Message="@ErrorMessage" OnDismiss="ClearError" />

    @if (IsLoading)
    {
        <LoadingSpinner />
    }
    else if (OrdersList != null && OrdersList.Any())
    {
        <div class="row">
            @foreach (var order in OrdersList.OrderByDescending(o => o.CreatedAt))
            {
                <div class="col-12 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div>
                                    <h5 class="card-title mb-1">Order #@order.Id.ToString().Substring(0, 8)</h5>
                                    <p class="text-muted mb-0">@order.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
                                </div>
                                <span class="badge bg-@GetStatusBadgeColor(order.Status)">@GetStatusText(order.Status)</span>
                            </div>
                            <hr />
                            <div class="mb-3">
                                <h6>Items:</h6>
                                <ul class="list-unstyled">
                                    @foreach (var item in order.Items)
                                    {
                                        <li class="d-flex justify-content-between mb-2">
                                            <span>@item.ProductName x @item.Quantity</span>
                                            <span>@item.Subtotal.ToString("C")</span>
                                        </li>
                                    }
                                </ul>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    @if (order.DiscountAmount.HasValue && order.DiscountAmount > 0)
                                    {
                                        <small class="text-muted d-block">Subtotal: @order.Subtotal.ToString("C")</small>
                                        <small class="text-success d-block">Discount: -@order.DiscountAmount.Value.ToString("C")</small>
                                    }
                                    <strong class="d-block mt-2">Total: @order.Total.ToString("C")</strong>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else if (!IsLoading)
    {
        <div class="alert alert-info">
            <h5>No orders found</h5>
            <p>You haven't placed any orders yet.</p>
            <a href="/products" class="btn btn-primary">View Products</a>
        </div>
    }
</div>
