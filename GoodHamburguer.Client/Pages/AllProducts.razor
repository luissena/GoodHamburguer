@page "/all-products"

<PageTitle>GoodHamburguer - All Products</PageTitle>

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2>All Products</h2>
        </div>
    </div>

    <ErrorMessage Message="@ErrorMessage" OnDismiss="ClearError" />

    @if (IsLoading)
    {
        <LoadingSpinner />
    }
    else if (ProductsList != null && ProductsList.Items.Any())
    {
        @foreach (var categoryGroup in ProductsList.Items.GroupBy(p => p.Category.Name).OrderBy(g => g.Key))
        {
            <div class="mb-5">
                <h3 class="mb-4">@categoryGroup.Key</h3>
                <div class="row g-3 g-md-4">
                    @foreach (var product in categoryGroup)
                    {
                        <div class="col-12 col-sm-6 col-md-6 col-lg-4 col-xl-3">
                            <ProductCard Product="@product" OnAddToCart="HandleAddToCart" IsLoading="@IsAddingToCart" />
                        </div>
                    }
                </div>
            </div>
        }

        @if (ProductsList != null && ProductsList.TotalPages > 1)
        {
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(CurrentPage == 1 ? "disabled" : "")">
                        <button class="page-link" @onclick="() => ChangePage(CurrentPage - 1)" disabled="@(CurrentPage == 1)">Previous</button>
                    </li>
                    @for (int i = 1; i <= ProductsList.TotalPages; i++)
                    {
                        var pageNumber = i;
                        <li class="page-item @(pageNumber == CurrentPage ? "active" : "")">
                            <button class="page-link" @onclick="() => ChangePage(pageNumber)">@pageNumber</button>
                        </li>
                    }
                    <li class="page-item @(CurrentPage == ProductsList.TotalPages ? "disabled" : "")">
                        <button class="page-link" @onclick="() => ChangePage(CurrentPage + 1)" disabled="@(CurrentPage == ProductsList.TotalPages)">Next</button>
                    </li>
                </ul>
            </nav>
        }
    }
    else if (!IsLoading)
    {
        <div class="alert alert-info">No products found.</div>
    }
</div>

